<li id="<%= dom_id(user) %>">
  <div class="row-fluid">
    <div class="span8">
      <%= link_to user.name, user %>
    </div>
    <div class="span3">
      <div class="pull-right">
        <% if current_user.admin? && !current_user?(user) %>
            <%= link_to user, method: :delete,
                        class: "btn btn-danger",
                        remote: true,
                        data: { confirm: "You sure?" } do %>
                <i class="icon-trash icon-white"></i>
                Delete
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</li>