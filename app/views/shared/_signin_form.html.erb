<div class="span4 well <%= home_transify %>">
  <legend>Sign in to Site Builder</legend>
  <% if request.url.include?(sessions_path) %>
      <%= render 'shared/flash_messages' %>
  <% end %>

  <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.text_field :email, placeholder: "Email", class: "span4" %>

      <%= f.password_field :password, placeholder: "Password", class: "span4"  %>

      <%= f.submit "Sign in", class: "btn-info btn" %>
  <% end %>

  <% unless current_page?root_url %>
    <p>New user ?  <%= link_to "Sign up now!", signup_path %></p>
  <% end %>
</div>