<!DOCTYPE html>
<html>
<head>
  <% if isEscapeFragmentParams? %>
      <title><%= @web.pages.find_by_url_name(params[:_escaped_fragment_]).title %></title>
  <% else %>
      <title><%= full_title(yield(:title)) %></title>
  <% end %>

  <!-- Good showing on mobile device with responsive design -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag    "web_themes/" + @web.theme.name + "/import", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "bootstrap", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "web_themes/generator_style", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "web_themes/column_block", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "fancybox", media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "jquery", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "jquery_ujs", "data-turbolinks-track" => true %>

  <% unless isEscapeFragmentParams? %>
    <%= javascript_include_tag "web_themes/subpage_loader", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "web_themes/classes/c_loader", "data-turbolinks-track" => true %>
  <% end %>

  <%= javascript_include_tag "bootstrap", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "fancybox", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "web_themes/" + @web.theme.name + "/import", "data-turbolinks-track" => true %>
  <% unless @web.favicon.nil? %>
      <%= favicon_link_tag @web.favicon_url.to_s %>
  <% end %>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
  <%= csrf_meta_tags %>

  <% if isEscapeFragmentParams? %>
      <meta name="keywords" content="<%= @web.pages.find_by_url_name(params[:_escaped_fragment_]).meta_keywords %>" >
      <meta name="description" content="<%= @web.pages.find_by_url_name(params[:_escaped_fragment_]).meta_description %>" >
  <% else %>
      <meta name="keywords" content="<%= @web.name %>" >
      <meta name="description" content="<%= @web.name %>" >
  <% end %>

</head>
<body style="background: <%= @web.bg_color %>;">
    <% @google_analytics_service = @web.ext_services.find_by_service_type("Google analytics") %>
    <% unless @google_analytics_service.nil? %>
        <%= raw @google_analytics_service.service_value %>
    <% end %>
    <%= yield %>
</body>
</html>
