<% provide(:title, 'Update Password') %>
<div class="row offset4">
    <div class="span4 well">
        <div class="legend">Update your password</div>
        <%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <%= f.password_field :password, placeholder: "Password", class: "span4" %>

            <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "span4" %>

            <%= f.submit "Update Password", class: "btn btn-danger" %>
        <% end %>
    </div>
</div>